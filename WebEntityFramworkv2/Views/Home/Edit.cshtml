@model DatLibreria.EntityFramework.Libros

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Libros</h2>

<form action="/" method="post">
    <table>
        <tr>
            <td>Título</td>
            <td>@Html.TextBox("Id", null, new { @class = "form-control" })</td>
            <td>@Html.TextBox("Titulo", null, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>Autor</td>
            <td>@Html.TextBox("Autor", null, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>Categoria</td>
            <td>@Html.DropDownList("Categoria", null, "Seleccionar", new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>Editorial</td>
            <td>@Html.TextBox("Editorial", null, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>Edición</td>
            <td>@Html.TextBox("Edicion", null, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>ISBN</td>
            <td>@Html.TextBox("ISBN", null, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td><input type="submit" name="name" value="Editar" formaction="/Home/Edit" class="btn btn-success" /></td>
            <td><a href="/Home/Index" class="btn btn-primary">Regresar</a></td>
        </tr>
    </table>
</form>
